<section id='registration'>
    <h3> New User Registration </h3>
    <div id='holder'>
        <div class="row px-3 form-item"><label class="mb-1">
                <h6 class="mb-0 text-sm">Username</h6>
            </label><input name="username" placeholder="Enter Username" id='usernameEntry'></div>
        <div class="row px-3 form-item"><label class="mb-1">
                <h6 class="mb-0 text-sm">Email Address</h6>
            </label><input name="email" placeholder="Ex: (myname@email.com) " id='emailEntry'></div>
        <div class="row px-3 form-item"><label class="mb-1">
                <h6 class="mb-0 text-sm">Password</h6>
            </label><input type="password" name="password" placeholder="Must be at least 8 characters" id='passwordEntry'></div>
        <div class="row px-3 mb-4">
        </div>
        <div class="row mb-3 px-3"><button type="button" class="btn btn-primary" id='register'>Submit</button></div>
    </div>
</section>
<script src="/public/js/register.js"></script>