<section id='blogposts'>
    {{#each blog as |blog|}}
    <div class="col-md-12 postItem">
        <a href="/posts/{{blog.id}}">
        <div class="card">
            <div class="card-body">
                <h2>{{blog.title}}</h2>
                <h6 class="card-subtitle text-muted">Author: {{blog.user.username}}</h6>
                <p class="card-text">{{blog.content}}</p>
            </div>
            </div>
        </a>
    </div>
    {{/each}}
</section>