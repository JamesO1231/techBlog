<section id='login'>
    <form class='loginForm' id='holder'>
        <div class="row px-3"><label class="mb-1">
                <h6 class="mb-0 text-sm">Username</h6>
            </label><input class="sm-4" type="text" name="email" id='usernameLogin' placeholder='Enter a valid username'></div>
        <div class="row px-3"><label class="mb-1">
                <h6 class="mb-0 text-sm">Password</h6>
            </label><input class="sm-4" type="password" name="password" id='passwordLogin' placeholder="Enter password"></div>
        <div class="row px-3 mb-4">
        </div>
        <div class="row sm-3 px-3"><button type="button" class="btn btn-primary" id='login'>Login</button></div>
        <div class="row md-4 px-3"><small class="font-weight-bold">Don't have an account?<a class="text-danger" type="button" href="/register" id='registerLink'>Register</a></small></div>
    </form>
</section>
<script src="/js/login.js"></script>